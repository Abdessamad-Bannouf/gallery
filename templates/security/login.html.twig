{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link href="/css/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="{{ asset('/uploads/login/sonic.png') }}"
                                         alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center login-body">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        <form id="login-form" method="post" role="form">

                                            {% if error %}
                                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}

                                            {% if app.user %}
                                                <div class="mb-3">
                                                    Tu es connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                                </div>
                                            {% endif %}

                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                <span class="h1 fw-bold mb-0">Logo</span>
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connecte-toi à ton compte !</h5>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <label class="form-label" for="inputEmail">Email</label>
                                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Email" required autofocus>
                                            </div>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                <label class="form-label" for="password">Mot de passe</label>
                                                <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Mot de passe">
                                            </div>

                                            <input type="hidden" name="_csrf_token"
                                                   value="{{ csrf_token('authenticate') }}"
                                            >

                                            <div class="form-group">
                                                <input type="checkbox" tabindex="3" class="" name="remember" id="remember">
                                                <label for="remember"> Se souvenir de moi</label>
                                            </div>

                                            <div class="pt-1 mb-4">
                                                <button type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">Se connecter</button>
                                            </div>

                                            <a class="small text-muted" href="#!">Forgot password?</a>
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">Tu n'as pas compte ? <a href="{{ path('app_register') }}"
                                                                                                                      style="color: #393f81;">Inscris-toi ici !</a></p>
                                            <a href="#!" class="small text-muted">Termes d'utilisations.</a>
                                            <a href="#!" class="small text-muted">Politique de confidentialité</a>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
