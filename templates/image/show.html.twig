{% extends 'base.html.twig' %}
 
{% block title %}Image{% endblock %}
 
{% block body %}

    <h1>Image</h1>
 
    <table class="table text-white">

        <tbody>

            <tr>

                <th>Id</th>

                <td>{{ image.id }}</td>

            </tr>

            <tr>

                <th>Nom</th>

                <td>{{ image.name }}</td>

            </tr>

            <tr>

                <th>Date</th>

                <td>{{ image.date ? image.date|date('Y-m-d H:i:s') : '' }}</td>

            </tr>

        </tbody>

    </table>
 
    <button class="btn btn-info"><a href="{{ path('app_image_index') }}">Retour à la liste</a></button>
 
    <button class="btn btn-warning"><a href="{{ path('app_single_image', {'id': image.id}) }}">Editer</a></button>
 
    {{ include('image/_delete_form.html.twig') }}

{% endblock %}

