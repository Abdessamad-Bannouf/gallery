{% block body %}

    <h1>Page d'accueil d'images</h1>

    <div class="container">

        <div class="row">

            <div class="col-8">

                <div id="carouselExampleControls" class="carousel slide w-75" data-ride="carousel">

                    <div class="carousel-inner">

                        <div class="carousel-item active">

                            <img class="d-block w-100" src="https://source.unsplash.com/random/200x200?sig=1" alt="First slide">

                        </div>

                    </div>

                    <a class="carousel-control-prev" href="{{ url('app_single_image', {'page': previous})  }}" role="button" data-slide="prev" onclick="prev()">

                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>

                        <span class="sr-only">Previous</span>

                    </a>

                    <a class="carousel-control-next" href="{{ url('app_single_image', {'page': next}) }}" role="button" data-slide="next">

                        <span class="carousel-control-next-icon" aria-hidden="true"></span>

                        <span class="sr-only">Next</span>

                    </a>

                </div>

            </div>
 
            <div class="col-4">

                <div class="card-columns">

                    <div class="card text-center">

                        <div class="card-body">

                            <h5 class="card-title" style="color:black">{{ image.name }}</h5>

                            <p class="card-text">Le nom de l'auteur</p>

                            <p class="card-text"><small class="text-muted">{{ image.date|date('Y-m-d H:i:s') }}</small></p>

                        </div>

                    </div>

                </div>

            </div>

        </div>

