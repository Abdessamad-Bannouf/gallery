{% extends 'base.html.twig' %}

{% block title %}Rénitialisation du mot de passe{% endblock %}

{% block stylesheets %}
    <link href="/css/login.css" rel="stylesheet">
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col col-xl-10">
                        <div class="card" style="border-radius: 1rem;">
                            <div class="row g-0">
                                <div class="col-md-6 col-lg-5 d-none d-md-block">
                                    <img src="{{ asset('/uploads/login/sonic.png') }}"
                                         alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                                </div>
                                <div class="col-md-6 col-lg-7 d-flex align-items-center login-body">
                                    <div class="card-body p-4 p-lg-5 text-black">

                                        {{ form_start(requestForm) }}

                                            <div class="d-flex align-items-center mb-3 pb-1">
                                                <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                                <span class="h1 fw-bold mb-0">Mot de passe</span>
                                            </div>

                                            <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Rénitialise ton mot de passe !</h5>

                                            <div data-mdb-input-init class="form-outline mb-4">
                                                {{ form_row(requestForm.email) }}
                                            </div>

                                            <div class="pt-1 mb-4">
                                                <button class="btn btn-primary">Envoyer un mail de rénitialisation de mot de passe</button>
                                            </div>
                                        {{ form_end(requestForm) }}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
